// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Referencias {
  id         Int    @id @default(autoincrement())
  refernecia String @unique
  container  String
}

model Clientes {
  id       Int       @id @default(autoincrement())
  name     String
  rfc      String    @unique
  email    String    @unique
  Bitacora Bitacora?
}

model Bitacora {
  id             Int      @id @default(autoincrement())
  tipooperaqcion String
  client         Clientes @relation(fields: [idclient], references: [id])
  idclient       Int      @unique
  user           User     @relation(fields: [userId], references: [id])
  userId         Int      @unique
  revalidacion   DateTime? @updatedAt
  eta            DateTime? @updatedAt
  previo         DateTime? @updatedAt
  glosa          DateTime? @updatedAt
  datepay        DateTime? @updatedAt
  datemodu       DateTime? @updatedAt
  folioinvoice   String?
  cuentagastos   String?
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  role     String
  Bitacora Bitacora?
}